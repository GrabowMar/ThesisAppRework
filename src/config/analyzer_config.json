{
  "analyzer_services": {
    "host": "localhost",
    "base_port": 2001,
    "services": {
      "static": {
        "port": 2001,
        "name": "static-analyzer"
      },
      "dynamic": {
        "port": 2002,
        "name": "dynamic-analyzer"
      },
      "performance": {
        "port": 2003,
        "name": "performance-tester"
      },
      "ai": {
        "port": 2004,
        "name": "ai-analyzer"
      }
    }
  },
  "analyzer_paths": {
    "source_mount": "/app/sources",
    "local_generated": "generated/apps",
