  "valid_tools": {
    "all": ["bandit", "safety", "pylint", "eslint", "npm_audit", "semgrep", "snyk", "mypy", "flake8", "ab", "wrk", "curl", "wget", "nmap", "requirements-scanner"],
    "security": ["bandit", "safety", "pylint", "eslint", "npm_audit", "semgrep", "snyk"],
    "static": ["pylint", "mypy", "flake8", "eslint"],
    "performance": ["ab", "wrk"],
    "dynamic": ["curl", "wget", "nmap"],
    "ai": ["requirements-scanner", "requirements-analyzer", "gpt4all-requirements", "openrouter-requirements"]
  },
  "analysis_timeouts": {
    "default": 300,
    "security": 600,
