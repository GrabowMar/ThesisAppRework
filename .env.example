# ThesisApp Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-me-to-a-random-secure-key
LOG_LEVEL=INFO

# Database
# For development with Docker: sqlite:////app/src/data/thesis_app.db
# For production: postgresql://user:pass@host:port/dbname
DATABASE_URL=sqlite:////app/src/data/thesis_app.db

# Redis (Message Broker & Cache)
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_POOL=prefork
CELERY_WORKER_CONCURRENCY=2

# OpenRouter API (for AI analysis)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_ALLOW_ALL_PROVIDERS=true
OPENROUTER_SITE_URL=http://localhost:5000
OPENROUTER_SITE_NAME=ThesisApp

# Analyzer Services
ANALYZER_BASE_URL=http://analyzer-gateway:8765

# Docker Configuration (if running Docker-in-Docker)
DOCKER_HOST=unix:///var/run/docker.sock

# Performance Tuning
MAX_CONTENT_LENGTH=16777216  # 16MB max request size
