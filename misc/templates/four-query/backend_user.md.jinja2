@user_bp.route('/items', methods=['GET'])
def get_items():
    try:
        items = Item.query.filter_by(is_active=True).all()
        return jsonify({
            'items': [item.to_dict() for item in items],
            'total': len(items)
        }), 200
    except Exception as e:
        return jsonify({'error': str(e)}), 500
