{
  "slug": "crud_todo_list",
  "name": "Todo List",
  "category": "Productivity",
  "description": "Track personal tasks",
  "backend_requirements": [
    "Access control: allow public read-only todos; require auth for create/update/delete",
    "1. Todo model: id, title (required), description, priority, completed, created_at",
    "2. GET /api/todos - list todos",
    "3. POST /api/todos - create todo",
    "4. PUT /api/todos/:id - update todo",
    "5. DELETE /api/todos/:id - delete todo"
  ],
  "frontend_requirements": [
    "HomePage displays ALL todos in read-only mode for public users",
    "Public users see 'Sign in to manage' CTAs instead of action buttons",
    "Logged-in users see same content plus create/edit/delete functionality",
    "1. Todo list with title, priority, and status (visible to all)",
    "2. Add todo form (logged-in only)",
    "3. Toggle completed checkbox (logged-in only)",
    "4. Edit and delete buttons per todo (logged-in only)",
    "5. Filters for All / Active / Completed (visible to all)"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/todos",
      "description": "List all todos",
      "request": null,
      "response": {
        "items": [
          {
            "id": 1,
            "title": "string",
            "description": "string",
            "priority": "medium",
            "completed": false,
            "created_at": "ISO8601"
          }
        ],
        "total": 1
      }
    },
    {
      "method": "POST",
      "path": "/api/todos",
      "description": "Create new todo",
      "request": {
        "title": "string",
        "description": "string",
        "priority": "low|medium|high"
      },
      "response": {
        "id": 1,
        "title": "string",
        "description": "string",
        "priority": "medium",
        "completed": false,
        "created_at": "ISO8601"
      }
    },
    {
      "method": "PUT",
      "path": "/api/todos/:id",
      "description": "Update todo",
      "request": {
        "title": "string",
        "description": "string",
        "priority": "low|medium|high",
        "completed": true
      },
      "response": {
        "id": 1,
        "title": "string",
        "description": "string",
        "priority": "medium",
        "completed": true,
        "created_at": "ISO8601"
      }
    },
    {
      "method": "DELETE",
      "path": "/api/todos/:id",
      "description": "Delete todo",
      "request": null,
      "response": {}
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint",
      "request": null,
      "response": {
        "status": "healthy",
        "service": "backend"
      }
    }
  ],
  "data_model": {
    "name": "Todo",
    "fields": {
      "id": "integer (primary key, auto-increment)",
      "title": "string (required, max 255 chars)",
      "description": "text (optional)",
      "priority": "string (low, medium, high - default: medium)",
      "completed": "boolean (default: false)",
      "created_at": "datetime (auto, ISO 8601 format in JSON)",
      "is_active": "boolean (default: true, for soft delete)"
    }
  },
  "admin_requirements": [
    "1. Admin overview list with total/active/inactive counts",
    "2. Toggle active status for any todo"
  ],
  "admin_api_endpoints": [
    {
      "method": "GET",
      "path": "/api/admin/todos",
      "description": "Admin overview: list all todos and counts",
      "request": null,
      "response": {
        "items": [],
        "total": 0,
        "active": 0,
        "inactive": 0
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/todos/:id/toggle",
      "description": "Toggle todo active status",
      "request": null,
      "response": {
        "id": 1,
        "is_active": false
      }
    }
  ]
}
