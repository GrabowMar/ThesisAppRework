{
  "slug": "content_recipe_list",
  "name": "Recipe Book",
  "category": "Content",
  "description": "Save and view recipes",
  "backend_requirements": [
    "1. Recipe model: id, title (required), ingredients (JSON array), instructions (text), category (optional)",
    "2. CRUD endpoints: GET /api/recipes, GET /api/recipes/:id, POST, DELETE",
    "3. Filter by category: ?category=dessert query parameter",
    "4. Seed with 3-5 sample recipes",
    "5. JSON responses with proper status codes (200, 201, 404)"
  ],
  "frontend_requirements": [
    "1. Recipe list showing title and category",
    "2. Click recipe to view full details (ingredients and instructions)",
    "3. Add recipe form with title, ingredients, instructions, category",
    "4. Delete button with confirmation",
    "5. Filter by category dropdown"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/recipes",
      "description": "List all recipes (supports ?category= filter)",
      "request": null,
      "response": {
        "items": [
          {
            "id": 1,
            "title": "string",
            "ingredients": [
              "string"
            ],
            "instructions": "string",
            "category": "string",
            "created_at": "ISO8601"
          }
        ],
        "total": 1
      }
    },
    {
      "method": "POST",
      "path": "/api/recipes",
      "description": "Create new recipe",
      "request": {
        "title": "string",
        "ingredients": [
          "string"
        ],
        "instructions": "string",
        "category": "string (optional)"
      },
      "response": {
        "id": 1,
        "title": "string",
        "ingredients": [
          "string"
        ],
        "instructions": "string",
        "category": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "GET",
      "path": "/api/recipes/:id",
      "description": "Get recipe details",
      "request": null,
      "response": {
        "id": 1,
        "title": "string",
        "ingredients": [
          "string"
        ],
        "instructions": "string",
        "category": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "DELETE",
      "path": "/api/recipes/:id",
      "description": "Delete recipe",
      "request": null,
      "response": {}
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint",
      "request": null,
      "response": {
        "status": "healthy",
        "service": "backend"
      }
    }
  ],
  "data_model": {
    "name": "Recipe",
    "fields": {
      "id": "integer (primary key, auto-increment)",
      "title": "string (required, max 200 chars)",
      "ingredients": "JSON array of strings",
      "instructions": "text (required)",
      "category": "string (optional, max 50 chars)",
      "created_at": "datetime (auto, ISO 8601 format in JSON)",
      "is_active": "boolean (default: true, for soft delete)"
    }
  },
  "admin_requirements": [
    "1. Admin dashboard showing key statistics (total entries, active, inactive)",
    "2. Table listing ALL entries including inactive/soft-deleted with status badges",
    "3. Toggle button to activate/deactivate entries",
    "4. Bulk actions for selected entries (delete, status change)",
    "5. Search and filter functionality"
  ],
  "admin_api_endpoints": [
    {
      "method": "GET",
      "path": "/api/admin/recipes",
      "description": "List ALL recipes including inactive",
      "request": null,
      "response": {
        "items": [],
        "total": 0
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/recipes/:id/toggle",
      "description": "Toggle recipe active status",
      "request": null,
      "response": {
        "id": 1,
        "is_active": true
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/recipes/bulk-delete",
      "description": "Delete multiple recipes",
      "request": {
        "ids": [
          1,
          2,
          3
        ]
      },
      "response": {
        "deleted": 3
      }
    },
    {
      "method": "GET",
      "path": "/api/admin/stats",
      "description": "Get dashboard statistics",
      "request": null,
      "response": {
        "total": 0,
        "active": 0,
        "inactive": 0
      }
    }
  ]
}