{
  "slug": "content_recipe_list",
  "name": "Recipe Book",
  "category": "Content",
  "description": "Save and view recipes",
  "backend_requirements": [
    "1. Recipe model: id, title (required), ingredients (JSON array), instructions (text), category (optional)",
    "2. CRUD endpoints: GET /api/recipes, GET /api/recipes/:id, POST, DELETE",
    "3. Filter by category: ?category=dessert query parameter",
    "4. Seed with 3-5 sample recipes",
    "5. JSON responses with proper status codes (200, 201, 404)"
  ],
  "frontend_requirements": [
    "1. Recipe list showing title and category",
    "2. Click recipe to view full details (ingredients and instructions)",
    "3. Add recipe form with title, ingredients, instructions, category",
    "4. Delete button with confirmation",
    "5. Filter by category dropdown"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/recipes",
      "description": "List all recipes (supports ?category= filter)",
      "request": null,
      "response": {
        "items": [
          {
            "id": 1,
            "title": "string",
            "ingredients": [
              "string"
            ],
            "instructions": "string",
            "category": "string",
            "created_at": "ISO8601"
          }
        ],
        "total": 1
      }
    },
    {
      "method": "POST",
      "path": "/api/recipes",
      "description": "Create new recipe",
      "request": {
        "title": "string",
        "ingredients": [
          "string"
        ],
        "instructions": "string",
        "category": "string (optional)"
      },
      "response": {
        "id": 1,
        "title": "string",
        "ingredients": [
          "string"
        ],
        "instructions": "string",
        "category": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "GET",
      "path": "/api/recipes/:id",
      "description": "Get recipe details",
      "request": null,
      "response": {
        "id": 1,
        "title": "string",
        "ingredients": [
          "string"
        ],
        "instructions": "string",
        "category": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "DELETE",
      "path": "/api/recipes/:id",
      "description": "Delete recipe",
      "request": null,
      "response": {}
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint",
      "request": null,
      "response": {
        "status": "healthy",
        "service": "backend"
      }
    }
  ],
  "data_model": {
    "name": "Recipe",
    "fields": {
      "id": "integer (primary key, auto-increment)",
      "title": "string (required, max 200 chars)",
      "ingredients": "JSON array of strings",
      "instructions": "text (required)",
      "category": "string (optional, max 50 chars)",
      "created_at": "datetime (auto, ISO 8601 format in JSON)"
    }
  }
}