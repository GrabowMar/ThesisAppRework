{
  "slug": "finance_expense_list",
  "name": "Expense Tracker",
  "category": "Finance",
  "description": "Track your expenses",
  "backend_requirements": [
    "1. Expense model: id, amount (decimal, required), category (required), description, date (default today)",
    "2. CRUD endpoints: GET /api/expenses, POST, PUT, DELETE",
    "3. GET /api/expenses/total - return sum of all expenses",
    "4. GET /api/expenses/by-category - group totals by category"
  ],
  "frontend_requirements": [
    "1. Expense list showing date, amount, category, description",
    "2. Display total at top prominently",
    "3. Add expense form with amount, category dropdown, description, date",
    "4. Delete expense button",
    "5. Filter by category and date range"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/expenses",
      "description": "List all expenses (supports ?category= and ?start_date=, ?end_date= filters)"
    },
    {
      "method": "GET",
      "path": "/api/expenses/total",
      "description": "Get sum of all expenses"
    },
    {
      "method": "GET",
      "path": "/api/expenses/by-category",
      "description": "Get totals grouped by category"
    },
    {
      "method": "POST",
      "path": "/api/expenses",
      "description": "Create new expense"
    },
    {
      "method": "PUT",
      "path": "/api/expenses/:id",
      "description": "Update expense"
    },
    {
      "method": "DELETE",
      "path": "/api/expenses/:id",
      "description": "Delete expense"
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint"
    }
  ]
}