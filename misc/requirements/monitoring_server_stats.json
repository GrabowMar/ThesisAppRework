{
  "slug": "monitoring_server_stats",
  "name": "Server Monitor",
  "category": "Monitoring",
  "description": "Display server metrics",
  "backend_requirements": [
    "1. GET /api/stats - return {cpu_percent, memory_percent, disk_percent, uptime_seconds}",
    "2. Use psutil library or mock data if not available",
    "3. GET /api/stats/history - return last 10 readings",
    "4. Update readings every 5 seconds"
  ],
  "frontend_requirements": [
    "1. Large cards showing CPU%, Memory%, Disk%, Uptime",
    "2. Color-coded indicators: green (<70%), yellow (70-90%), red (>90%)",
    "3. Simple line chart showing history",
    "4. 'Refresh' button to update immediately",
    "5. Auto-refresh every 10 seconds"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/stats",
      "description": "Get current server stats",
      "request": null,
      "response": {
        "cpu_percent": 45.2,
        "memory_percent": 68.5,
        "disk_percent": 55.0,
        "uptime": 86400,
        "timestamp": "ISO8601"
      }
    },
    {
      "method": "GET",
      "path": "/api/stats/history",
      "description": "Get historical stats (supports ?hours=24 param)",
      "request": null,
      "response": {
        "items": [
          {
            "cpu_percent": 45.2,
            "memory_percent": 68.5,
            "disk_percent": 55.0,
            "timestamp": "ISO8601"
          }
        ],
        "total": 100
      }
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint",
      "request": null,
      "response": {
        "status": "healthy",
        "service": "backend"
      }
    }
  ],
  "data_model": {
    "name": "ServerStat",
    "fields": {
      "id": "integer (primary key, auto-increment)",
      "cpu_percent": "decimal (0-100)",
      "memory_percent": "decimal (0-100)",
      "disk_percent": "decimal (0-100)",
      "uptime": "integer (seconds)",
      "timestamp": "datetime (auto, ISO 8601 format in JSON)"
    }
  }
}