  "category": "Media",
  "description": "Play audio files",
  "backend_requirements": [
    "1. Episode model: id, title, audio_url, duration, description",
    "2. GET /api/episodes - return list of episodes",
    "3. Serve static audio files from /audio directory",
    "4. Seed with 2-3 sample audio URLs"
  ],
  "frontend_requirements": [
    "1. Episode list with title and duration",
    "2. Click episode to load in HTML5 audio player",
    "3. Player controls: play/pause, seek bar, volume, current time",
    "4. Currently playing episode highlighted",
    "5. Auto-play next episode option"
  ],
