{
  "slug": "workflow_task_board",
  "name": "Kanban Board",
  "category": "Workflow",
  "description": "Visual task workflow",
  "backend_requirements": [
    "1. Task model: id, title (required), description, status (todo/in_progress/done), priority",
    "2. CRUD endpoints: GET /api/tasks, POST, PUT, DELETE",
    "3. Update status: PUT /api/tasks/:id/status with {status: 'done'}",
    "4. Filter by status: ?status=todo"
  ],
  "frontend_requirements": [
    "1. Three columns: To Do, In Progress, Done",
    "2. Task cards showing title and description",
    "3. Button to move task to next column",
    "4. Add task form with title, description, priority",
    "5. Delete button per task"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/tasks",
      "description": "List all tasks"
    },
    {
      "method": "POST",
      "path": "/api/tasks",
      "description": "Create new task"
    },
    {
      "method": "PUT",
      "path": "/api/tasks/:id",
      "description": "Update task"
    },
    {
      "method": "DELETE",
      "path": "/api/tasks/:id",
      "description": "Delete task"
    }
  ],
  "control_endpoints": [
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint"
    }
  ]
}