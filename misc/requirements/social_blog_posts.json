{
  "slug": "social_blog_posts",
  "name": "Blog",
  "category": "Social",
  "description": "Write and read blog posts",
  "backend_requirements": [
    "Post model: id, title (required), content (text), author, created_at, updated_at",
    "CRUD endpoints: GET /api/posts (list), GET /api/posts/:id (single), POST, PUT, DELETE",
    "Support pagination: ?page=1&limit=10",
    "Search posts: ?search=query"
  ],
  "frontend_requirements": [
    "Post list showing title, excerpt (first 200 chars), date, author",
    "Click post title to view full content",
    "Create/edit post form with title and content textarea",
    "Delete button with confirmation",
    "Pagination controls at bottom"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/blogs",
      "description": "List all blogs"
    },
    {
      "method": "POST",
      "path": "/api/blogs",
      "description": "Create new blog"
    },
    {
      "method": "PUT",
      "path": "/api/blogs/:id",
      "description": "Update blog"
    },
    {
      "method": "DELETE",
      "path": "/api/blogs/:id",
      "description": "Delete blog"
    }
  ],
  "control_endpoints": [
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint"
    }
  ]
}