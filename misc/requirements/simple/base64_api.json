{
  "id": "base64_api",
  "name": "Base64 Converter API",
  "description": "An API to encode and decode Base64 strings",
  "endpoints": [
    {
      "method": "POST",
      "path": "/api/encode",
      "description": "Encode text to Base64",
      "input": {
        "text": "Hello, World!"
      },
      "output": {
        "encoded": "SGVsbG8sIFdvcmxkIQ=="
      }
    },
    {
      "method": "POST",
      "path": "/api/decode",
      "description": "Decode Base64 to text",
      "input": {
        "encoded": "SGVsbG8sIFdvcmxkIQ=="
      },
      "output": {
        "text": "Hello, World!"
      }
    },
    {
      "method": "GET",
      "path": "/api/history",
      "description": "Get conversion history",
      "input": null,
      "output": [
        {
          "id": 1,
          "type": "encode",
          "input": "Hello",
          "output": "SGVsbG8=",
          "created_at": "2024-01-01T00:00:00Z"
        }
      ]
    }
  ],
  "verification": [
    "Encode 'Hello, World!' and verify the Base64 output is correct",
    "Decode the result back and verify it matches the original",
    "Check history endpoint returns all conversions"
  ]
}
