{
  "id": "calculator_api",
  "name": "Calculator API",
  "description": "A simple calculator API with basic operations",
  "endpoints": [
    {
      "method": "POST",
      "path": "/api/calculate",
      "description": "Perform a calculation",
      "input": {
        "operation": "add|subtract|multiply|divide",
        "a": 10,
        "b": 5
      },
      "output": {
        "result": 15,
        "operation": "add",
        "expression": "10 + 5 = 15"
      }
    },
    {
      "method": "GET",
      "path": "/api/history",
      "description": "Get calculation history",
      "input": null,
      "output": [
        {
          "id": 1,
          "operation": "add",
          "a": 10,
          "b": 5,
          "result": 15,
          "created_at": "2024-01-01T00:00:00Z"
        }
      ]
    }
  ],
  "verification": [
    "Add 10 + 5 and verify result is 15",
    "Subtract 10 - 5 and verify result is 5",
    "Multiply 10 * 5 and verify result is 50",
    "Divide 10 / 5 and verify result is 2",
    "Divide by zero and verify error handling",
    "Check history contains all calculations"
  ]
}
