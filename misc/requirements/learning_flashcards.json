{
  "slug": "learning_flashcards",
  "name": "Flashcard Study Tool",
  "category": "Learning",
  "description": "Study with flashcards",
  "backend_requirements": [
    "1. Flashcard model: id, question (required), answer (required), category, difficulty",
    "2. CRUD endpoints: GET /api/flashcards, POST, PUT, DELETE",
    "3. GET /api/flashcards/random - return random card",
    "4. Filter by category: ?category=math",
    "5. Seed with 10+ sample flashcards across different categories"
  ],
  "frontend_requirements": [
    "1. Card display: large question text centered",
    "2. Click card or 'Show Answer' button to flip and reveal answer",
    "3. 'Next Card' button to load random card",
    "4. Add flashcard form with question, answer, category",
    "5. Category filter dropdown"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/flashcards",
      "description": "List all flashcards",
      "request": null,
      "response": {
        "items": [
          {
            "id": 1,
            "question": "string",
            "answer": "string",
            "category": "string",
            "created_at": "ISO8601"
          }
        ],
        "total": 1
      }
    },
    {
      "method": "POST",
      "path": "/api/flashcards",
      "description": "Create new flashcard",
      "request": {
        "question": "string",
        "answer": "string",
        "category": "string (optional)"
      },
      "response": {
        "id": 1,
        "question": "string",
        "answer": "string",
        "category": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "GET",
      "path": "/api/flashcards/random",
      "description": "Get random flashcard",
      "request": null,
      "response": {
        "id": 1,
        "question": "string",
        "answer": "string",
        "category": "string"
      }
    },
    {
      "method": "DELETE",
      "path": "/api/flashcards/:id",
      "description": "Delete flashcard",
      "request": null,
      "response": {}
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint",
      "request": null,
      "response": {
        "status": "healthy",
        "service": "backend"
      }
    }
  ],
  "data_model": {
    "name": "Flashcard",
    "fields": {
      "id": "integer (primary key, auto-increment)",
      "question": "text (required)",
      "answer": "text (required)",
      "category": "string (optional, max 50 chars)",
      "created_at": "datetime (auto, ISO 8601 format in JSON)",
      "is_active": "boolean (default: true, for soft delete)"
    }
  },
  "admin_requirements": [
    "1. Admin dashboard showing key statistics (total count, active count, etc.)",
    "2. Table listing ALL items including inactive/deleted with status badges",
    "3. Toggle button to activate/deactivate items",
    "4. Checkbox selection for bulk operations (delete, status change)",
    "5. Search and filter functionality"
  ],
  "admin_api_endpoints": [
    {
      "method": "GET",
      "path": "/api/admin/cards",
      "description": "List ALL cards including inactive",
      "request": null,
      "response": {
        "items": [],
        "total": 0
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/cards/:id/toggle",
      "description": "Toggle card active status",
      "request": null,
      "response": {
        "id": 1,
        "is_active": true
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/cards/bulk-delete",
      "description": "Delete multiple cards",
      "request": {
        "ids": [
          1,
          2,
          3
        ]
      },
      "response": {
        "deleted": 3
      }
    },
    {
      "method": "GET",
      "path": "/api/admin/stats",
      "description": "Get dashboard statistics",
      "request": null,
      "response": {
        "total": 0,
        "active": 0,
        "inactive": 0
      }
    }
  ]
}