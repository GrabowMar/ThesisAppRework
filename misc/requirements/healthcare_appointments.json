{
  "slug": "healthcare_appointments",
  "name": "Appointment Scheduler",
  "category": "Healthcare",
  "description": "Book and manage appointments",
  "backend_requirements": [
    "1. Appointment model: id, patient_name (required), date (required), time (required), doctor, notes",
    "2. CRUD endpoints: GET /api/appointments, POST, PUT, DELETE",
    "3. Filter by date: ?date=YYYY-MM-DD",
    "4. Validate: no double-booking same time slot"
  ],
  "frontend_requirements": [
    "1. Appointment list grouped by date, sorted by time",
    "2. Book form with patient name, date picker, time picker, doctor dropdown, notes",
    "3. Click appointment to view/edit details",
    "4. Cancel button with confirmation",
    "5. Today's appointments highlighted"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/appointments",
      "description": "List all appointments (supports ?date=YYYY-MM-DD filter)"
    },
    {
      "method": "POST",
      "path": "/api/appointments",
      "description": "Create new appointment"
    },
    {
      "method": "PUT",
      "path": "/api/appointments/:id",
      "description": "Update appointment"
    },
    {
      "method": "DELETE",
      "path": "/api/appointments/:id",
      "description": "Delete appointment"
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint"
    }
  ]
}