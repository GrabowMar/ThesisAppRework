{
  "slug": "healthcare_appointments",
  "name": "Appointment Scheduler",
  "category": "Healthcare",
  "description": "Book and manage appointments",
  "backend_requirements": [
    "1. Appointment model: id, patient_name (required), doctor (required), date (required), time (HH:MM format), reason (optional)",
    "2. CRUD endpoints: GET /api/appointments, POST, PUT, DELETE",
    "3. Filter by date: ?date=YYYY-MM-DD",
    "4. Validate: no double-booking same doctor/time slot",
    "5. JSON responses with proper status codes (200, 201, 400, 404, 409 for conflicts)"
  ],
  "frontend_requirements": [
    "1. Appointment list grouped by date, sorted by time",
    "2. Book form with patient name, date picker, time picker, doctor dropdown, reason (optional)",
    "3. Click appointment to view/edit details",
    "4. Cancel button with confirmation",
    "5. Today's appointments highlighted"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/appointments",
      "description": "List all appointments (supports ?date= filter)",
      "request": null,
      "response": {
        "items": [
          {
            "id": 1,
            "patient_name": "string",
            "doctor": "string",
            "date": "ISO8601",
            "time": "string",
            "reason": "string",
            "created_at": "ISO8601"
          }
        ],
        "total": 1
      }
    },
    {
      "method": "POST",
      "path": "/api/appointments",
      "description": "Schedule new appointment",
      "request": {
        "patient_name": "string",
        "doctor": "string",
        "date": "string",
        "time": "string",
        "reason": "string (optional)"
      },
      "response": {
        "id": 1,
        "patient_name": "string",
        "doctor": "string",
        "date": "ISO8601",
        "time": "string",
        "reason": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "PUT",
      "path": "/api/appointments/:id",
      "description": "Update appointment",
      "request": {
        "date": "string (optional)",
        "time": "string (optional)",
        "reason": "string (optional)"
      },
      "response": {
        "id": 1,
        "patient_name": "string",
        "doctor": "string",
        "date": "ISO8601",
        "time": "string",
        "reason": "string",
        "created_at": "ISO8601"
      }
    },
    {
      "method": "DELETE",
      "path": "/api/appointments/:id",
      "description": "Cancel appointment",
      "request": null,
      "response": {}
    },
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint",
      "request": null,
      "response": {
        "status": "healthy",
        "service": "backend"
      }
    }
  ],
  "data_model": {
    "name": "Appointment",
    "fields": {
      "id": "integer (primary key, auto-increment)",
      "patient_name": "string (required, max 100 chars)",
      "doctor": "string (required, max 100 chars)",
      "date": "date (required)",
      "time": "string (required, HH:MM format)",
      "reason": "text (optional)",
      "created_at": "datetime (auto, ISO 8601 format in JSON)",
      "is_active": "boolean (default: true, for soft delete)"
    }
  },
  "admin_requirements": [
    "1. Admin dashboard showing key statistics (total entries, active, inactive)",
    "2. Table listing ALL entries including inactive/soft-deleted with status badges",
    "3. Toggle button to activate/deactivate entries",
    "4. Bulk actions for selected entries (delete, status change)",
    "5. Search and filter functionality"
  ],
  "admin_api_endpoints": [
    {
      "method": "GET",
      "path": "/api/admin/appointments",
      "description": "List ALL appointments including inactive",
      "request": null,
      "response": {
        "items": [],
        "total": 0
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/appointments/:id/toggle",
      "description": "Toggle appointment active status",
      "request": null,
      "response": {
        "id": 1,
        "is_active": true
      }
    },
    {
      "method": "POST",
      "path": "/api/admin/appointments/bulk-delete",
      "description": "Delete multiple appointments",
      "request": {
        "ids": [
          1,
          2,
          3
        ]
      },
      "response": {
        "deleted": 3
      }
    },
    {
      "method": "GET",
      "path": "/api/admin/stats",
      "description": "Get dashboard statistics",
      "request": null,
      "response": {
        "total": 0,
        "active": 0,
        "inactive": 0
      }
    }
  ]
}