{
  "slug": "productivity_notes",
  "name": "Note Taking",
  "category": "Productivity",
  "description": "Create and organize notes",
  "backend_requirements": [
    "1. Note model: id, title (required), content (text), created_at, updated_at, pinned (boolean)",
    "2. CRUD endpoints: GET /api/notes, POST, PUT /api/notes/:id, DELETE",
    "3. Search notes: ?query=text searches title and content",
    "4. Pin/unpin notes: PUT /api/notes/:id/pin"
  ],
  "frontend_requirements": [
    "1. Two-column layout: note list (left), editor (right)",
    "2. Note list shows titles with preview, pinned notes at top",
    "3. Click note to load in editor",
    "4. Auto-save on typing (debounced)",
    "5. Delete note button with confirmation"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/notess",
      "description": "List all notess"
    },
    {
      "method": "POST",
      "path": "/api/notess",
      "description": "Create new notes"
    },
    {
      "method": "PUT",
      "path": "/api/notess/:id",
      "description": "Update notes"
    },
    {
      "method": "DELETE",
      "path": "/api/notess/:id",
      "description": "Delete notes"
    }
  ],
  "control_endpoints": [
    {
      "method": "GET",
      "path": "/api/health",
      "description": "Health check endpoint"
    }
  ]
}